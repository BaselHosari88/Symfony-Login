<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        {% endblock %}




        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>


    {% block nav %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-pills">
            <div class="container">
                <a class="navbar-brand text-success" href="{{ path('app_main') }}">The Training Factory</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-light" aria-current="page" href="{{ path('app_main') }}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="{{ path('app_rules') }}">Gedragsregels</a>
                        </li>

                        <li class="nav-item">
                            {% if app.user %}

                                {% if 'ROLE_MEMBER' in app.user.roles %}

                                    <a class="nav-link text-light" href="{{ path('app_member') }}">Dashboard</a>

                                    {% elseif  'ROLE_INSTRUCTOR' in app.user.roles %}

                                        <a class="nav-link text-light" href="{{ path('app_instructor') }}">Dashboard</a>

                                    {% elseif  'ROLE_ADMIN' in app.user.roles %}

                                        <a class="nav-link text-light" href="{{ path('app_admin') }}">Dashboard</a>

                                {% endif %}
                            {% endif %}

                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        {% if app.user %}
                            <a class="me-2 text-light text-decoration-none p-1" aria-current="page" href="{{ path('app_logout') }}" @click="isOpen = false">
                                Uitloggen ({{ app.user.username }})
                            </a>
                        {% else %}
                            <a class="text-light text-decoration-none py-2 px-3" href="{{ path('app_register') }}">Registreren</a>
                            <a class="btn btn-success me-2 text-light text-decoration-none py-2 px-3" aria-current="page" href="{{ path('app_login') }}" @click="isOpen = false">Inloggen</a>
                        {% endif %}
                    </form>
                </div>
            </div>
        </nav>



    {% endblock %}




    {% block body %}









        {% endblock %}
        {% block logout %}

        {% endblock %}

    {% block footer %}
        <footer class="bg-dark text-light text-center py-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Locatie</h5>
                        <p>Training Factory</p>
                        <p>Straatnaam 123</p>
                        <p>1234 AB Stad</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Contact</h5>
                        <p>Email: info@trainingfactory.nl</p>
                        <p>Telefoon: 012-3456789</p>
                    </div>
                </div>
            </div>
            <p>&copy; 2023 Training Factory. Alle rechten voorbehouden.</p>
        </footer>

    {% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    </body>
</html>
